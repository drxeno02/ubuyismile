<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="@string/shared_element_transition_name"
    android:background="@color/material_pink_100_color_code"
    tools:ignore="ContentDescription">

    <include
        android:id="@+id/header"
        layout="@layout/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scaling_20" />

    <RelativeLayout
        android:id="@+id/rl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scaling_300"
        android:layout_below="@id/header">

        <LinearLayout
            android:id="@+id/ll_label_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/scaling_34"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/edge_left_black"
            android:orientation="horizontal"
            android:visibility="visible">

            <!-- label icon -->
            <ImageView
                android:id="@+id/iv_label_icon"
                android:layout_width="@dimen/scaling_20"
                android:layout_height="@dimen/scaling_20"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/scaling_4"
                android:gravity="center_vertical"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <!-- label -->
            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/scaling_10"
                android:layout_marginStart="@dimen/scaling_4"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>

        <!-- background -->
        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scaling_300"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_desc_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black_40"
            android:padding="@dimen/scaling_10"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/scaling_10"
                android:weightSum="1"
                android:layout_height="wrap_content">

                <!-- title -->
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_16" />

                <!-- price -->
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight=".15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_18" />

            </LinearLayout>

            <!-- description -->
            <TextView
                android:id="@+id/tv_desc"
                android:ellipsize="end"
                android:maxLines="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/scaling_10"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>

        <!-- share and favorite icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/scaling_neg_30"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_above="@+id/ll_desc_wrapper"
            android:layout_height="wrap_content">

            <!-- share icon -->
            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="@dimen/scaling_40"
                android:scaleType="fitXY"
                android:src="@drawable/share_icon"
                android:layout_height="@dimen/scaling_40" />

            <!-- favorite icon -->
            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_marginStart="@dimen/scaling_10"
                android:layout_width="@dimen/scaling_40"
                android:scaleType="fitXY"
                android:src="@drawable/favorite_icon"
                android:layout_height="@dimen/scaling_40" />

        </LinearLayout>

    </RelativeLayout>

    <!-- buy -->
    <TextView
        android:id="@+id/tv_buy"
        android:layout_below="@+id/rl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scaling_60"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/material_light_green_400_color_code"
        android:textSize="@dimen/font_size_20"
        android:text="@string/buy"/>

</RelativeLayout>