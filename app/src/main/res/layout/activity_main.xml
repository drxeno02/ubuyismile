<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_teal_200_color_code"
    tools:context=".activity.MainActivity">

    <!-- toolbar -->
    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_teal_a700_color_code"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/toolbar_shadow" />
    </LinearLayout>

    <!-- information bar -->
    <RelativeLayout
        android:id="@+id/rl_info_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scaling_60"
        android:layout_below="@+id/ll_toolbar"
        android:background="@color/white">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/scaling_5"
            android:layout_marginStart="@dimen/scaling_5"
            android:layout_marginTop="@dimen/scaling_5"
            android:src="@drawable/close_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/scaling_25"
            android:layout_marginLeft="@dimen/scaling_25"
            android:layout_marginRight="@dimen/scaling_25"
            android:layout_marginStart="@dimen/scaling_25"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

    </RelativeLayout>

    <!-- list of items -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_items"
        android:layout_below="@+id/rl_info_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:scrollbars="none" />


</RelativeLayout>