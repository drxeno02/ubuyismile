<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_40"
    android:clickable="true"
    tools:ignore="ContentDescription">

    <include
        android:id="@+id/header"
        layout="@layout/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scaling_50" />

    <!-- image preview -->
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/scaling_360"
        android:layout_height="@dimen/scaling_360"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/scaling_10"
        app:cardElevation="@dimen/scaling_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingEnd="@dimen/scaling_5"
            android:paddingStart="@dimen/scaling_5"
            android:paddingBottom="@dimen/scaling_20"
            android:paddingTop="@dimen/scaling_5">

            <!-- title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <!-- building image -->
            <ImageView
                android:id="@+id/iv_item_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/scaling_10" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
