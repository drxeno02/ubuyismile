<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_80"
    android:clickable="true" >

    <include
        android:id="@+id/header"
        layout="@layout/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/scaling_10"
        app:cardElevation="@dimen/scaling_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/scaling_5"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_14"/>

            <!-- building address -->
            <!--<com.udi.app.framework.gui.FontedTextView-->
                <!--android:id="@+id/tv_building_address"-->
                <!--style="@style/TextViewSourceSansPro"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:paddingBottom="@dimen/scaling_5"-->
                <!--android:paddingEnd="@dimen/scaling_5"-->
                <!--android:paddingLeft="@dimen/scaling_5"-->
                <!--android:paddingRight="@dimen/scaling_5"-->
                <!--android:paddingStart="@dimen/scaling_5"-->
                <!--android:textColor="@color/grey_text"-->
                <!--android:textSize="@dimen/font_size_14"/>-->

            <!-- building image -->
            <ImageView
                android:id="@+id/iv_item_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
