<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_200_color_code"
    android:clickable="true"
    android:orientation="vertical">

    <!-- header -->
    <include
        layout="@layout/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scaling_50" />

    <!-- description text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_24" />

        <!-- app version -->
        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scaling_5"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <!-- copyright -->
        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scaling_30"
            android:gravity="center"
            android:text="@string/copyright_year"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18" />

        <!-- description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scaling_20"
            android:gravity="center"
            android:text="@string/about_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18" />

    </LinearLayout>

    <!-- description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/scaling_20"
        android:gravity="center"
        android:text="@string/privacy_desc"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

</LinearLayout>