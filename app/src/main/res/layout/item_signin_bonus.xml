<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/scaling_90"
    android:layout_height="@dimen/scaling_90"
    tools:ignore="ContentDescription">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/scaling_90"
        android:layout_height="@dimen/scaling_90"
        app:cardElevation="@dimen/scaling_5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- signin bonus icon -->
            <ImageView
                android:id="@+id/iv_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/signin_bonus_default" />

            <!-- day label -->
            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edge_right_black_trans_40"
                android:gravity="center"
                android:padding="@dimen/scaling_5"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>