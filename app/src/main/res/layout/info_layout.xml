<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_info_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_light_blue_a400_color_code"
        android:paddingBottom="@dimen/scaling_10">

        <RelativeLayout
            android:id="@+id/rl_info_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- happiness icon -->
            <com.app.framework.gui.CircleImageView
                android:id="@+id/civ_emote_info"
                android:layout_width="@dimen/scaling_56"
                android:layout_height="@dimen/scaling_56"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/scaling_10"
                android:layout_marginTop="@dimen/scaling_10"
                android:scaleType="centerCrop"
                android:src="@drawable/happiness_90_01" />

            <!-- happiness message -->
            <TextView
                android:id="@+id/tv_message_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/scaling_10"
                android:layout_marginStart="@dimen/scaling_10"
                android:layout_marginTop="@dimen/scaling_5"
                android:layout_toEndOf="@+id/civ_emote_info"
                android:layout_toStartOf="@+id/iv_close_info"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

            <!-- close button -->
            <ImageView
                android:id="@+id/iv_close_info"
                android:layout_width="@dimen/scaling_26"
                android:layout_height="@dimen/scaling_26"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/scaling_5"
                android:layout_marginTop="@dimen/scaling_5"
                android:src="@drawable/close_white" />

        </RelativeLayout>

        <!-- yes/no -->
        <LinearLayout
            android:id="@+id/ll_info_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_info_wrapper"
            android:layout_marginTop="@dimen/scaling_5"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_positive_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/scaling_34"
                android:layout_weight="0.5"
                android:background="@color/material_green_400_color_code"
                android:gravity="center"
                android:text="@string/yes"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_negative_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/scaling_34"
                android:layout_weight="0.5"
                android:background="@color/material_red_600_color_code"
                android:gravity="center"
                android:text="@string/no"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>