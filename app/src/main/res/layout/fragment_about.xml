<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_300_color_code"
    android:clickable="true"
    android:orientation="vertical"
    tools:ignore="KeyboardInaccessibleWidget">

    <include
        layout="@layout/fragment_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scaling_50" />

    <!-- description text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_24" />

        <!-- app version -->
        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scaling_5"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16" />

        <!-- copyright -->
        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scaling_30"
            android:gravity="center"
            android:text="@string/copyright_year"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18" />

        <!-- description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scaling_20"
            android:gravity="center"
            android:text="@string/about_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_18" />

    </LinearLayout>

    <!-- follow me -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/scaling_10"
        android:layout_marginStart="@dimen/scaling_10"
        android:layout_marginTop="@dimen/scaling_20"
        android:text="@string/follow_me"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

    <!-- social media -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/scaling_10"
        android:layout_marginStart="@dimen/scaling_10"
        android:layout_marginTop="@dimen/scaling_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- facebook -->
        <ImageView
            android:id="@+id/iv_fb"
            android:layout_width="@dimen/scaling_60"
            android:layout_height="@dimen/scaling_60"
            android:layout_weight="0.25"
            android:src="@drawable/fb_02" />

        <!-- twitter -->
        <ImageView
            android:id="@+id/iv_twitter"
            android:layout_width="@dimen/scaling_60"
            android:layout_height="@dimen/scaling_60"
            android:layout_weight="0.25"
            android:src="@drawable/twitter_02" />

        <!-- linkedin -->
        <ImageView
            android:id="@+id/iv_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/linkedin_01" />

    </LinearLayout>

    <!-- email -->
    <TextView
        android:id="@+id/tv_feedback_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/scaling_10"
        android:layout_marginStart="@dimen/scaling_10"
        android:layout_marginTop="@dimen/scaling_20"
        android:gravity="center"
        android:text="@string/feedback_email"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_18" />

</LinearLayout>