<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/material_yellow_300_color_code" android:startColor="@color/material_yellow_a200_color_code" />
            <stroke android:width="1dp" android:color="@color/material_grey_300_color_code" />
            <corners android:radius="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/material_yellow_300_color_code" android:startColor="@color/material_yellow_a200_color_code" />
            <stroke android:width="1dp" android:color="@color/material_grey_300_color_code" />
            <corners android:radius="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/material_amber_500_color_code" android:startColor="@color/material_amber_a700_color_code" />
            <stroke android:width="1dp" android:color="@color/black" />
            <corners android:radius="1dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>